QWidget#mainwindow {
    background-color: #f0f0f0;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
}

QWidget#mainwindow > QToolButton#tool {
    background-color: #f0f0f0;
    border: 1px solid black;
    border-radius: 10px;
    padding: 5px;
}

QWidget#mainwindow > QToolButton#tool:hover {
    border-color: #507090;
    background-color: #f8f8ff;
}

QWidget#mainwindow > QToolButton#tool:pressed {
    border-color: gray;
    background-color: #e0e0f0;
}
